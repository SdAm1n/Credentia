<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Credentia"
             x:Class="Credentia.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="bgColor1">#F8FBFC</Color>
            <Color x:Key="bgColor2">#EEF6F7</Color>
            <Color x:Key="bgColor3">#EAEEEE</Color>
            <x:Double x:Key="FontSize">24</x:Double>

            <Style x:Key="LogButtonStyle" TargetType="Button">
                <Setter Property="HeightRequest" Value="48" />
                <Setter Property="WidthRequest" Value="165" />

            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
